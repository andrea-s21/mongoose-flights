<%- include('../partials/header') %>
    <h2> All Flights</h2>
    <table id="flight-idx">
        <thead>
            <tr>
                <th>Airline &nbsp;&nbsp;&nbsp;</th>
                <th>Airport &nbsp;&nbsp;&nbsp;</th>
                <th>Flight No.&nbsp;&nbsp;&nbsp;</th>
                <th>Depart Time&nbsp;&nbsp;&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(f) { %>
                <tr>
                    <td>
                        <%= f.airline %>
                    </td>
                    <td>
                        <%= f.airport %>
                    </td>
                    <td>
                        <%= f.flightNo %>
                    </td>
                    <td>
                        <%= f.departs %>
                    </td>
                    <td>
                        <a id="details-btn" href="/flights/<%= f._id  %> ">Flight Details</a>
                    </td>
                </tr>
                <!-- Close the forEach using EJS here -->
            <% }); %>
        </tbody>
    </table>

    <%- include('../partials/footer') %>